 <script type="text/javascript">
 $(function () {
	$("#showLink").hide();
	$("hideLink").click(function () {
		$("para1").hide();
		$("#hideLink").hide();
		$("#hideLink").show();
	})
	
	/* $("#showLink").hide(); */
	$("#showLink").click(function () {
		$("#para1").show();
		$("#hideLink").show();
		$("#showLink").hide();
	})	
		
});
 </script>
